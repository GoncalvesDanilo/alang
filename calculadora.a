imprimir('--==Calculadora==--')
imprimir()

funcao realizarOperacao(valor1, valor2, operador) {
  se (operador === '+') {
    retornar valor1 + valor2
  } senao se (operador === '-') {
    retornar valor1 - valor2
  } senao se (operador === '*') {
    retornar valor1 * valor2
  } senao se (operador === '/') {
    retornar valor1 / valor2
  } senao se (operador === '%') {
    retornar valor1 % valor2
  } senao {
    retornar 'Operação Inválida'
  }
}

var operador = ' '
var valor1
var valor2

enquanto(operador) {
  operador = ler('Digite a operação (+,-,*,/,%):')
  valor1 = ler('Digite o primeiro valor:')
  valor2 = ler('Digite o segundo valor:')

  imprimir()

  se (valor1 && valor2) {
    const valor1Convertido = converterParaNumero(valor1)
    const valor2Convertido = converterParaNumero(valor2)

    imprimir('Resultado:', realizarOperacao(valor1Convertido, valor2Convertido, operador))
    imprimir()
  } senao {
    imprimir('Valores Inválidos')
    imprimir()
  }
}
